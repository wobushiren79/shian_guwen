<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="orderlist_item_title_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:minEms">6</item>
    </style>

    <style name="orderlist_item_content_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/zhy_text_color_9</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="orderlist_item_btn_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#7b5237</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_orderlist_item_btn</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tipsDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="edit_order_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/txtsize_32sp</item>
    </style>

    <style name="edit_order_editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/shape_et_order_bg</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/txtsize_32sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="edit_order_spinnerStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="order_detail_projectTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_32dp</item>
        <item name="android:textColor">@color/zhy_text_color_1</item>
        <item name="android:textSize">@dimen/dimen_32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="order_detail_ctgTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#696969</item>
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/txtsize_26sp</item>
    </style>

    <style name="order_detail_productTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>

    </style>

    <style name="order_detail_productTextStyle1" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="customer_detail_titleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_32dp</item>
        <item name="android:textColor">@color/zhy_text_color_1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dimen_32dp</item>
    </style>

    <style name="customer_detail_title2TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:minEms">6</item>
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="customer_detail_contentTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>