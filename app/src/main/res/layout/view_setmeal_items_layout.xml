<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_50dp"
        android:paddingRight="@dimen/dimen_32dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_24dp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/zhy_order_add" />
    </LinearLayout>


    <com.shian.shianlife.view.ScrollListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_0dp"
        android:scrollbars="none"></com.shian.shianlife.view.ScrollListView>
</LinearLayout>