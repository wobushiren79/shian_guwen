<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.shian.shianlife.activity.goods.GoodsOrderPayActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1"
        android:clipChildren="false">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="@dimen/dimen_586dp"
            android:layout_height="@dimen/dimen_678dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_92dp"
            android:background="@drawable/zhy_goods_pay_bg"
            android:clipChildren="false"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_146dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_110dp"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textColor="@color/zhy_text_color_1"
                    android:textSize="@dimen/dimen_32dp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/zhy_text_color_16"
                    android:textSize="@dimen/dimen_32dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_80dp"
                android:gravity="center_horizontal"
                android:text="支付金额"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_32dp" />

            <TextView
                android:id="@+id/tv_pay_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dimen_32dp"
                android:paddingRight="@dimen/dimen_32dp"
                android:text=""
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_48dp"
                android:textStyle="bold"
                android:typeface="normal" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_96dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay_wechat"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_96dp"
            android:layout_weight="1"
            android:background="@drawable/zhy_submit_button_style_2"
            android:gravity="center"
            android:text="微信支付"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pay_offline"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_96dp"
            android:layout_weight="1"
            android:background="@drawable/zhy_submit_button_style_1"
            android:gravity="center"
            android:text="线下支付"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp" />
    </LinearLayout>

</LinearLayout>
