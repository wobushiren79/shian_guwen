<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zhy_backgroud_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.shian.shianlife.view.searchview.CustomSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_12dp"></com.shian.shianlife.view.searchview.CustomSearchView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6dp" />

            <include
                android:id="@+id/layout_build_cemetery"
                layout="@layout/layout_build_order_button"></include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_18dp" />

            <include
                android:id="@+id/layout_build_funeral"
                layout="@layout/layout_build_order_button"></include>

            <com.shian.shianlife.view.listview.GoodsClassAttrMainListView
                android:id="@+id/layout_class_attr_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/white"></com.shian.shianlife.view.listview.GoodsClassAttrMainListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_18dp" />

            <com.shian.shianlife.view.goods.GoodsMainRecommendLayout
                android:id="@+id/layout_recommend_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.shian.shianlife.view.goods.GoodsMainRecommendLayout>

        </LinearLayout>
    </ScrollView>


    <com.shian.shianlife.view.goods.GoodsShoppingCartButton
        android:id="@+id/bt_goods_shopping_cart"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/zhy_goods_shopping_cart"></com.shian.shianlife.view.goods.GoodsShoppingCartButton>


</RelativeLayout>