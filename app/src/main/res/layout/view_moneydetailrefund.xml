<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_setmeal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_refund_yske"
                style="@style/order_detail_ctgTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总应收款：" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_common" />

            <TextView
                android:id="@+id/tv_prepayAmount"
                style="@style/order_detail_ctgTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="支付金额：" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_common" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/order_detail_ctgTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额：" />

                <TextView
                    android:id="@+id/tv_prepayEndTime"
                    style="@style/order_detail_ctgTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_yfje"
                style="@style/order_detail_ctgTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="应支付金额：" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="@dimen/dimen_170dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_home_reg"
        android:gravity="center"
        android:text="提交确认"
        android:textColor="@color/white" />

</RelativeLayout>