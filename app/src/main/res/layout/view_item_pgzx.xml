<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp" >

    <TextView
        android:id="@+id/tv_oi_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:text="户外棚配套	"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_top_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/user_down_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp" >

        <TextView
            android:id="@+id/tv_oi_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="高级户外棚	"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />

        <TextView
            android:id="@+id/tv_oi_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="数量：1套"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />

        <TextView
            android:id="@+id/tv_oi_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="型号：HW1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />

        <TextView
            android:id="@+id/tv_oi_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="派单中"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_detail_list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp"
        android:visibility="gone" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:gravity="center"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remakell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp" >

        <TextView
            android:id="@+id/tv_oi_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="备注说明:"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />

        <EditText
            android:id="@+id/et_oi_bz"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_ht_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/btn_ht_pic_0"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/ic_ht_pic"
                android:gravity="center"
                android:tag="file1" />

            <ProgressBar
                android:id="@+id/pb_ht_pic_0"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/btn_ht_pic_1"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/ic_ht_pic"
                android:gravity="center"
                android:tag="file2" />

            <ProgressBar
                android:id="@+id/pb_ht_pic_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_home_reg"
            android:text="保存" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/user_down_line" />

    <RelativeLayout
        android:id="@+id/rl_qt0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:padding="@dimen/dimen_20dp" >

        <TextView
            android:id="@+id/tv_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="执行者姓名/ID:"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />

        <TextView
            android:id="@+id/tv_pgzx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_toRightOf="@+id/tv_11"
            android:gravity="left"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_detail_list" />

        <ImageView android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qt_phone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_common" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp" >

        <TextView
            android:id="@+id/tv_pgzx_ev"
            android:layout_width="@dimen/dimen_350dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@color/orangeyellow"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_top_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@color/gray" />

</LinearLayout>