<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80dp"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:background="@drawable/bg_cemetery_item_et_2"
        android:id="@+id/tv_map_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:gravity="center"
        style="@style/cemetery_text_style_4" />

    <ImageView
        android:id="@+id/iv_data"
        android:layout_width="@dimen/dimen_75dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_cemetery_item_et_3"
        android:padding="@dimen/dimen_20dp"
        android:src="@drawable/bg_cemetery_item_select" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="@dimen/dimen_75dp"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/bg_cemetery_item_location" />
</LinearLayout>