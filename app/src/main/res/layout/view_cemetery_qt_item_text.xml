<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_name"
        style="@style/cemetery_text_style_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/cemetery_text_style_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center"
        android:background="@drawable/cemetery_phone" />

    <Button
        android:id="@+id/bt_userinfo"
        android:layout_width="@dimen/dimen_140dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center|right"
        android:background="@drawable/bg_cemetery_item_button_2"
        android:gravity="center"
        android:text="洽谈信息"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_map"
        android:layout_gravity="center|right"
        android:background="@drawable/cemetery_qt_item_map"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp" />
</LinearLayout>