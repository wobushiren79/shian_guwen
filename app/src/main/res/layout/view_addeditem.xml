<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sl_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp" >

    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light" >

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:background="#00000000"
            android:text="删除"
            android:textColor="#ffffff" />
    </FrameLayout>

    <LinearLayout android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_common"
        android:orientation="vertical"
        android:visibility="visible" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_addedname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="回礼："
                android:textColor="#000000"
                android:textSize="@dimen/txtsize_35sp" />

            <Spinner
                android:id="@+id/sp_addedtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="#e3e3e3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_20dp" >

            <TextView
                android:id="@+id/tv_one_dj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="单价:0000"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize_27sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_one_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="数量:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_27sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/bg_addandsub"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_sub"
                        android:layout_width="@dimen/dimen_45dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="#999999"
                        android:textSize="@dimen/txtsize_20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#999999" />

                    <EditText
                        android:id="@+id/et_num"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textColor="#999999"
                        android:textSize="@dimen/txtsize_20sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="@dimen/dimen_45dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#999999"
                        android:textSize="@dimen/txtsize_20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_one_xj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="小计:0000"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize_27sp" />
        </RelativeLayout>
    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>