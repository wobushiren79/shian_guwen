<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_text_color_3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/zhy_button_state_item_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_1_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_state"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:textColor="@color/zhy_text_color_4" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_2_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_2_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:background="@drawable/ic_qt_phone" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_3_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_3_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_4_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_4_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_5_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_5_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_6_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_6_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:id="@+id/ll_info_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_7_title"
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_7_content"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_info_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_talkdetails"
                android:layout_width="@dimen/dimen_133dp"
                android:layout_height="@dimen/dimen_66dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_2"
                android:gravity="center"
                android:text="洽谈详情"
                android:textColor="@color/zhy_title_color_1"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_orderdetails"
                android:layout_width="@dimen/dimen_133dp"
                android:layout_height="@dimen/dimen_66dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_2"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/zhy_title_color_1"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_car"
                android:layout_width="@dimen/dimen_132dp"
                android:layout_height="@dimen/dimen_66dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="申请用车"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_24dp" />


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dimen_132dp"
                android:layout_height="@dimen/dimen_66dp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="申请取消"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_24dp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>