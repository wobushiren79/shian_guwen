<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1"
    android:orientation="horizontal"
    tools:context="com.shian.shianlife.activity.goods.GoodsClassAttrDetailsActivity">


    <com.shian.shianlife.view.listview.GoodsClassListView
        android:id="@+id/goods_class_list"
        android:layout_width="@dimen/dimen_180dp"
        android:layout_height="match_parent"
        android:background="@color/white"></com.shian.shianlife.view.listview.GoodsClassListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_27dp"
            android:layout_marginTop="@dimen/dimen_27dp"
            android:textSize="@dimen/dimen_30dp" />

        <com.shian.shianlife.view.listview.GoodsClassAttrListView
            android:id="@+id/goods_class_attr_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.shian.shianlife.view.listview.GoodsClassAttrListView>
    </LinearLayout>
</LinearLayout>
