<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zhy_goods_number_change_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_sub"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_62dp"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_25dp"
        android:paddingRight="@dimen/dimen_25dp"
        android:background="@drawable/zhy_goods_number_change_bg_left"
        android:paddingTop="@dimen/dimen_20dp"
        android:src="@drawable/zhy_goods_change_remove" />



    <EditText
        android:id="@+id/et_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:digits="0123456789"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="8"
        android:maxWidth="@dimen/dimen_280dp"
        android:minWidth="@dimen/dimen_90dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:singleLine="true"
        android:textColor="@color/zhy_text_color_16"
        android:textSize="@dimen/dimen_28dp"
        android:textStyle="bold" />




    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_62dp"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_25dp"
        android:paddingRight="@dimen/dimen_25dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:src="@drawable/zhy_goods_change_add" />
</LinearLayout>