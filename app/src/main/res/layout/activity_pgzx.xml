<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:gravity="right"
            android:text="我应该如何操作下面的服务步骤？"
            android:textColor="@color/gray_item_shua_textcolor"
            android:textSize="@dimen/txtsize_30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_item_shua_textcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_neworder1"
                android:layout_width="@dimen/dimen_250dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@drawable/pgzx_button1"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:text="编辑订单"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txtsize_32sp" />

            <TextView
                android:id="@+id/tv_neworder2"
                android:layout_width="@dimen/dimen_250dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/pgzx_button2"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:text="结束派单"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txtsize_32sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="申请退款"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimen_40dp"
            android:visibility="gone" />


        <com.shian.shianlife.view.ScrollListView
            android:id="@+id/lv_swipe_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:descendantFocusability="beforeDescendants"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:scrollbarStyle="outsideOverlay" />
    </LinearLayout>


</ScrollView>
