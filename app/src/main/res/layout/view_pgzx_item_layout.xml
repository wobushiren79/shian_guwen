<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_line_left"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/zhy_line_6" />

            <TextView
                android:id="@+id/tv_line_right"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/zhy_line_6" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimen_26dp"
            android:layout_height="@dimen/dimen_26dp"
            android:layout_centerInParent="true"
            android:src="@drawable/zhy_pgzx_icon_1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="@dimen/dimen_78dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/zhy_pgzx_state_1"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_24dp" />

</LinearLayout>