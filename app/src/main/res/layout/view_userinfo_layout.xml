        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:text="钱包"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="0"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_72dp" />
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_48dp"
            android:layout_marginTop="@dimen/dimen_48dp"
            android:background="@color/zhy_text_color_2" />

        <LinearLayout
            android:id="@+id/ll_integral"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16dp"
