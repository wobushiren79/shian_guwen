<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_400dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200dp"
        android:background="@color/zhy_text_color_1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="@dimen/dimen_132dp"
            android:layout_height="@dimen/dimen_132dp"
            android:src="@drawable/zhy_userinfo_icon"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_28dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_28dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:src="@drawable/zhy_main_score_icon" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_64dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sign_icon"
                    android:layout_width="@dimen/dimen_46dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:src="@drawable/zhy_main_sign_white" />

                <TextView
                    android:id="@+id/tv_sign_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="签到"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_233dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/zhy_shadow_back" />

    <LinearLayout
