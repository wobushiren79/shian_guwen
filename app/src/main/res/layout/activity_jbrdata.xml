<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shian.shianlife.view.writeview.EditTextViewNormal
            android:id="@+id/write_agentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="经办人姓名"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal
            android:id="@+id/write_agentmoblie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="经办人电话"></com.shian.shianlife.view.writeview.EditTextViewNormal>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.SpinnerViewEdit
            android:id="@+id/write_agentrelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="经办人是逝者的"></com.shian.shianlife.view.writeview.SpinnerViewEdit>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.MapSelectViewNormal
            android:id="@+id/write_mapselect_agentlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="经办人地址"></com.shian.shianlife.view.writeview.MapSelectViewNormal>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.MapSelectViewNormal
            android:id="@+id/write_mapselect_zslocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="治丧地址"></com.shian.shianlife.view.writeview.MapSelectViewNormal>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal
            android:id="@+id/write_agentcardid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="经办身份证"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal
            android:id="@+id/write_agentemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="经办人邮箱地址"></com.shian.shianlife.view.writeview.EditTextViewNormal>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal
            android:id="@+id/write_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="false"
            MyViewAttr:isLonger="true"
            MyViewAttr:titleName="备注"></com.shian.shianlife.view.writeview.EditTextViewNormal>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/dimen_260dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:background="@drawable/zhy_button_state_2"
                android:gravity="center"
                android:text="返回往生者信息"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_32dp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/dimen_260dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="继续修改合同"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_32dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>