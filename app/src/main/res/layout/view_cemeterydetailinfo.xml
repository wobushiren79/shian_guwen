<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/customer_detail_titleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公墓信息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_common" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/customer_detail_title2TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否购墓：" />

        <TextView
            android:id="@+id/tv_buyIntention"
            style="@style/customer_detail_contentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buyYx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/customer_detail_title2TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购墓意向：" />

        <TextView
            android:id="@+id/tv_buyYx"
            style="@style/customer_detail_contentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dimen_25dp"
        android:layout_marginRight="@dimen/dimen_25dp"
        android:background="@color/gray_common" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公墓地址：" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公墓名称：" />

            <TextView
                android:id="@+id/tv_cemeteryName"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="墓穴位置：" />

            <TextView
                android:id="@+id/tv_graveAddress"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购墓金额：" />

            <TextView
                android:id="@+id/tv_buyAmount"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安葬时间：" />

            <TextView
                android:id="@+id/tv_buryTime"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用情况：" />

            <TextView
                android:id="@+id/tv_cemeteryUsageStatus"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/customer_detail_title2TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注：" />

            <TextView
                android:id="@+id/tv_note"
                style="@style/customer_detail_contentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="@color/gray_common" />
    </LinearLayout>
</LinearLayout>