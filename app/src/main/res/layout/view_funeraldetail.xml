<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_visitNum"
        style="@style/order_detail_projectTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_80dp"
        android:text="治丧配套商品" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <TextView
        android:id="@+id/tv_setmealFuneralName"
        style="@style/order_detail_productTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_80dp"
        android:text="套餐名称：" />


    <LinearLayout
        android:id="@+id/ll_xx_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/order_detail_ctgTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_weight="1"
            android:text="合计："
            android:textSize="@dimen/dimen_24dp" />

        <TextView
            android:id="@+id/tv_totalprice"
            style="@style/order_detail_ctgTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:text="￥"
            android:textColor="@color/dimgray"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_16dp"
        android:background="@color/zhy_backgroud_1" />
</LinearLayout>