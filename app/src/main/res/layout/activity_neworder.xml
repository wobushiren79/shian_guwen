<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.shian.shianlife.view.writeview.EditTextViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="客户姓名"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:inputType="2"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="联系电话"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="客户当前地址"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.SpinnerViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="业务类型"></com.shian.shianlife.view.writeview.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="false"
            MyViewAttr:isLonger="true"
            MyViewAttr:titleName="备注"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />


        <!--<com.shian.shianlife.common.view.LBSLocalView-->
        <!--android:id="@+id/lbs"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dimen_20dp"-->
        <!--android:visibility="gone" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_qiatan"
                android:layout_width="@dimen/dimen_260dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:background="@drawable/zhy_button_state_2"
                android:gravity="center"
                android:text="进入洽谈"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_32dp" />

            <TextView
                android:id="@+id/tv_editorder"
                android:layout_width="@dimen/dimen_260dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="创建订单"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_32dp" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>