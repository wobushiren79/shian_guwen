<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_blackgourd_2">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_192dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_962dp"
            android:layout_marginTop="@dimen/dimen_120dp"
            android:background="@drawable/login_edit_blackgroud"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_137dp"
                android:layout_height="@dimen/dimen_36dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_150dp"
                android:src="@drawable/zhy_load_title" />

            <LinearLayout
                android:layout_width="@dimen/dimen_514dp"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_130dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:src="@drawable/login_phone" />

                <EditText
                    android:id="@+id/et_login_username"
                    android:layout_width="@dimen/dimen_514dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:lines="1"
                    android:textColorHint="@color/zhy_text_color_2"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dimen_514dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_gravity="center"
                android:background="@color/zhy_line_4" />

            <LinearLayout
                android:layout_width="@dimen/dimen_514dp"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:src="@drawable/login_password" />

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:lines="1"
                    android:password="true"
                    android:textColorHint="@color/zhy_text_color_2"
                    android:textSize="@dimen/dimen_24dp" />

                <Button
                    android:id="@+id/bt_phonecode"
                    android:layout_marginRight="@dimen/dimen_6dp"
                    android:textColor="@color/zhy_text_color_1"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_165dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:background="@drawable/zhy_button_state_2" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dimen_514dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginBottom="@dimen/dimen_60dp"
                android:layout_gravity="center"
                android:background="@color/zhy_line_4" />


            <com.shian.shianlife.view.customview.LoadingButton
                android:id="@+id/btn_login"
                android:layout_width="@dimen/dimen_500dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_gravity="center"></com.shian.shianlife.view.customview.LoadingButton>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_state1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/zhy_login_rb_1"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:text="殡仪"
                    android:textColor="@color/zhy_text_color_2"
                    android:textSize="@dimen/dimen_24dp" />

                <RadioButton
                    android:id="@+id/rb_state2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/zhy_login_rb_1"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:text="公墓"
                    android:textColor="@color/zhy_text_color_2"
                    android:textSize="@dimen/dimen_24dp" />
            </RadioGroup>


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_262dp"
            android:layout_height="@dimen/dimen_262dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_log_2" />
    </RelativeLayout>


</ScrollView>