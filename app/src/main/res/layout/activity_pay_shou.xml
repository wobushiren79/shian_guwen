<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_orderDetail"
            android:layout_width="@dimen/dimen_688dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/zhy_button_state_5"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:text="总体服务满意度"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_00"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="礼仪服务"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_01"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:text="协调安排"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_10"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="葬礼方案"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_11"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:text="生活纪念馆"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_20"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="商品和用品"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_21"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:gravity="center_vertical"
            android:text="收款明细"
            android:textColor="@color/black_item_shua_textcolor"
            android:textSize="@dimen/dimen_32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="当前总金额:"
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_24dp" />

                <TextView
                    android:id="@+id/tv_pays_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@+id/tv_pays_1"
                    android:layout_weight="1
                    "
                    android:gravity="center_vertical"
                    android:text="定金:"
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_24dp" />

                <TextView
                    android:id="@+id/tv_pays_0"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@+id/tv_pays_1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@+id/tv_pays_0"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="退款金额:"
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_24dp" />

                <TextView
                    android:id="@+id/tv_pays_3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@+id/tv_pays_0"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@+id/tv_pays_3"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="待支付金额:"
                    android:textColor="@color/black_item_shua_textcolor"
                    android:textSize="@dimen/dimen_28dp" />

                <TextView
                    android:id="@+id/tv_pays_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@+id/tv_pays_3"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/zhy_text_color_1"
                    android:textSize="@dimen/dimen_28dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@color/zhy_backgroud_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_450dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:gravity="center_vertical"
                android:text="客户签字"
                android:textColor="@color/black_item_shua_textcolor"
                android:textSize="@dimen/dimen_32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/zhy_line_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_22dp"
                android:background="@drawable/zhy_edit_back_1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="请确认上述费用无误后，点击下面空白处签字:"
                    android:textColor="@color/zhy_text_color_10"
                    android:textSize="@dimen/dimen_24dp" />

                <ImageView
                    android:layout_margin="@dimen/dimen_10dp"
                    android:id="@+id/iv_sign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@color/zhy_backgroud_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:gravity="center_vertical"
                android:text="客户意见"
                android:textColor="@color/black_item_shua_textcolor"
                android:textSize="@dimen/dimen_32dp" />

            <EditText
                android:id="@+id/et_pay_opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_22dp"
                android:layout_marginRight="@dimen/dimen_22dp"
                android:background="@drawable/zhy_edit_back_1"
                android:gravity="left"
                android:hint="您的宝贵意见..."
                android:lines="4"
                android:minHeight="@dimen/dimen_50dp"
                android:padding="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/zhy_backgroud_1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_refund"
                android:layout_width="@dimen/dimen_266dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_2"
                android:gravity="center"
                android:text="退款管理"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_32dp" />


            <TextView
                android:id="@+id/tv_pay_sure"
                android:layout_width="@dimen/dimen_266dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_32dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>