<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/tv_orderDetail"
            android:layout_width="@dimen/dimen_280dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:text="总体服务满意度"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_00"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="礼仪服务"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_01"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:text="协调安排"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_10"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="葬礼方案"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_11"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:text="生活纪念馆"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_20"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="商品和用品"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp" />

            <Spinner
                android:id="@+id/sp_pay_21"
                android:layout_width="@dimen/dimen_220dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_pay_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="您的宝贵意见:"
            android:minHeight="@dimen/dimen_50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pays_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="当前总金额:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_40dp" />

            <TextView
                android:id="@+id/tv_pays_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pays_1"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="定金:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_40dp" />

            <TextView
                android:id="@+id/tv_pays_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pays_0"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="退款金额:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_40dp" />

            <TextView
                android:id="@+id/tv_pays_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pays_3"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="剩余应支付:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_40dp" />

            <TextView
                android:id="@+id/tv_pay_refund"
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:background="@drawable/ic_home_reg"
                android:gravity="center"
                android:text="退款管理"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_30dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_310dp"
            android:background="@drawable/shape_et_order_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="请确认上述费用无误后，在下面空白处签字:"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_30dp" />

            <com.shian.shianlife.common.view.finger.DrawView
                android:id="@+id/dv_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_resign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/shenhe_pass"
                android:gravity="center"
                android:text="重新签字"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_30dp" />

            <TextView
                android:id="@+id/tv_pay_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40dp"

                android:background="@drawable/shenhe_pay"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_30dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>