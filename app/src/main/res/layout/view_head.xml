<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100dp"
    android:background="@color/zhy_text_color_1"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_20dp"

 >

    <TextView
        android:id="@+id/back"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_back_default"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_head_title"
        android:layout_width="@dimen/dimen_64dp"
        android:layout_height="@dimen/dimen_64dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/zhy_user_icon"
        android:textColor="@color/white"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/title_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="成都市"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_40dp" />

    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_40dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tv_head_right"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_home_msg_2" />

    <ImageView
        android:id="@+id/iv_msg"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/ic_new_message" />

