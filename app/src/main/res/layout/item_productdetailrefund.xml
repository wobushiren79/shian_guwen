<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名称" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="货号" />

            <TextView
                android:id="@+id/tv_huohao"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单位" />

            <TextView
                android:id="@+id/tv_unit"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单价" />

            <TextView
                android:id="@+id/tv_danjia"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="金额" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num"
            style="@style/order_detail_productTextStyle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已服务数量：" />

        <TextView
            style="@style/order_detail_productTextStyle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货数量：" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_addandsub"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sub"
                android:layout_width="@dimen/dimen_45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="—"
                android:textColor="#999999"
                android:textSize="@dimen/txtsize_20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999" />

            <EditText
                android:id="@+id/et_num"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#999999"
                android:textSize="@dimen/txtsize_20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="@dimen/dimen_45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textColor="#999999"
                android:textSize="@dimen/txtsize_20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tkje"
            style="@style/order_detail_productTextStyle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货金额：0" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:gravity="top"
        android:hint="请填写退款理由"
        android:minHeight="@dimen/dimen_150dp"
        android:textSize="@dimen/dimen_25dp" />

</LinearLayout>