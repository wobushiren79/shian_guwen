<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/dimen_28dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:src="@drawable/zhy_main_dynamic_more" />

        <com.shian.shianlife.view.ScrollGridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:scrollbars="none"></com.shian.shianlife.view.ScrollGridView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_16dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:background="@drawable/zhy_main_dynamic_title_back"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_23dp"
            android:layout_height="@dimen/dimen_19dp"
            android:layout_gravity="center"
            android:src="@drawable/zhy_main_myapp_title_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="我的应用"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_24dp" />
    </LinearLayout>
</RelativeLayout>