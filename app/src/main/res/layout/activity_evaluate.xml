<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:paddingLeft="@dimen/dimen_32dp"
            android:paddingRight="@dimen/dimen_32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="执行者姓名"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_ev_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_toRightOf="@+id/tv_qt0"
                android:gravity="left"
                android:text=""
                android:textColor="@color/zhy_text_color_9"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen_32dp"
            android:paddingRight="@dimen/dimen_32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="执行人联系方式"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_ev_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_toRightOf="@+id/tv_qt0"
                android:gravity="left"
                android:text=""
                android:textColor="@color/zhy_text_color_9"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:text="执行者提交审核文字"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp">

            <TextView
                android:id="@+id/tv_ev_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:layout_toRightOf="@+id/tv_qt0"
                android:gravity="left"
                android:textColor="@color/zhy_text_color_9"
                android:textSize="@dimen/dimen_24dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:text="执行者提交审核图片:"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_2dp"></RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@color/zhy_backgroud_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我来评价"
            android:textColor="@color/black_item_shua_textcolor"
            android:textSize="@dimen/dimen_32dp" />

        <RatingBar
            android:id="@+id/rb_ev"
            style="@style/zhy_radingbar_style_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:isIndicator="false"
            android:rating="0"
            android:stepSize="0.5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center"
            android:text="选择标签"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_ev_0"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:background="@drawable/shape_et_order"
                android:gravity="center"
                android:text="细心"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/btn_ev_1"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:background="@drawable/shape_et_order"
                android:gravity="center"
                android:text="专业"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/btn_ev_2"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@drawable/shape_et_order"
                android:gravity="center"
                android:text="态度好"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_ev_3"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:background="@drawable/shape_et_order"
                android:gravity="center"
                android:text="满意"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/btn_ev_4"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:background="@drawable/shape_et_order"
                android:gravity="center"
                android:text="不规范"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/btn_ev_5"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@drawable/shape_et_order"
                android:gravity="center"
                android:text="待改进"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_ev_note"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@drawable/zhy_edit_back_1"
            android:gravity="top"
            android:hint="输入其它意见或建议"
            android:padding="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zhy_backgroud_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_editorder"
                android:layout_width="@dimen/dimen_688dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="确认提交"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40dp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>