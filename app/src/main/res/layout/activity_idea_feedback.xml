<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_idea_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1"
    android:orientation="vertical"
    tools:context="com.shian.shianlife.activity.IdeaFeedbackActivity">

    <EditText
        android:layout_marginTop="@dimen/dimen_8dp"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300dp"
        android:background="@color/white"
        android:gravity="top"
        android:maxLength="100"
        android:hint="请输入您的意见"
        android:padding="@dimen/dimen_24dp"
        android:textColorHint="@color/dimgray"
        android:textSize="@dimen/dimen_24dp"></EditText>

    <TextView
        android:id="@+id/tv_textnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:padding="@dimen/dimen_24dp"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/dimen_24dp" />

    <Button
        android:id="@+id/bt_submit"
        android:textSize="@dimen/dimen_32dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dimen_688dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/zhy_button_state_5"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
