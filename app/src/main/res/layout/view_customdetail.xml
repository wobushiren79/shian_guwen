<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_orderNum"
            style="@style/order_detail_projectTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_weight="1"
            android:text="订单编号："
            android:textSize="@dimen/txtsize_35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <TextView
            android:id="@+id/tv_orderTime"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_weight="1"
            android:text="订单日期：" />
    </LinearLayout>

    <View
        android:background="@color/zhy_backgroud_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:background="@color/white">

        <com.shian.shianlife.common.view.ColorsTextView
            android:id="@+id/tv_visitNum"
            style="@style/order_detail_projectTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_centerVertical="true"
            android:text="客户编号：" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_khName"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="客户姓名：" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_khTel"
                style="@style/order_detail_productTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_weight="1"
                android:text="客户电话：" />

            <TextView
                android:id="@+id/tv_customerdetail"
                style="@style/orderlist_item_btn_textStyle"
                android:layout_width="@dimen/dimen_160dp"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_gravity="right|center"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:background="@drawable/zhy_button_state_2"
                android:text="客户详情"
                android:textColor="@color/zhy_text_color_1" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_agentmanName"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="经办人姓名：" />


        <TextView
            android:id="@+id/tv_agentmanlinkInfo"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="经办人电话：" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contractNo"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="合同编号：" />


        <TextView
            android:id="@+id/tv_contractAmount"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="合同金额：" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_usageName"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="逝者姓名：" />


        <TextView
            android:id="@+id/tv_funeralTime"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="出殡时间：" />


        <TextView
            android:id="@+id/tv_startTime"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="服务开始时间：" />

        <TextView
            android:id="@+id/tv_endTime"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="服务结束时间：" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_talkerName"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="白事顾问：" />


        <TextView
            android:id="@+id/tv_talkerTel"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="白事顾问电话：" />

        <TextView
            android:id="@+id/tv_performerName"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="治丧指导：" />


        <TextView
            android:id="@+id/tv_performerTel"
            style="@style/order_detail_productTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:text="治丧指导电话：" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_agentmanAddress"
            style="@style/order_detail_productTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:text="经办人地址：" />


        <TextView
            android:id="@+id/tv_funeralAddress"
            style="@style/order_detail_productTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:text="治丧地址：" />


        <TextView
            android:id="@+id/tv_dieAddress"
            style="@style/order_detail_productTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:text="去世地址：" />


        <TextView
            android:id="@+id/tv_funeralParlorAddress"
            style="@style/order_detail_productTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:text="殡仪馆地址：" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24dp" />

</LinearLayout>