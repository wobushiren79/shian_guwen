<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_45dp"
    android:paddingLeft="@dimen/dimen_25dp"
    android:paddingRight="@dimen/dimen_25dp"
    android:paddingTop="@dimen/dimen_45dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cemetery_item_text"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_alignParentRight="true"

            android:background="@drawable/cemetery_item_title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_40dp"
                android:rotation="45"
                android:text="洽谈中"
                android:textColor="#f6c858"
                android:textSize="@dimen/txtsize_20sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_20dp"
            android:paddingLeft="@dimen/dimen_25dp"
            android:paddingRight="@dimen/dimen_25dp"
            android:paddingTop="@dimen/dimen_20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户姓名：" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3dp"
                android:background="@drawable/cemetery_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间：" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3dp"
                android:background="@drawable/cemetery_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话：" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cemetery_phone" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3dp"
                android:background="@drawable/cemetery_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约地点：" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3dp"
                android:background="@drawable/cemetery_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约参观公墓：" />

                <TextView
                    android:id="@+id/tv_cemeteryName"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3dp"
                android:background="@drawable/cemetery_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交通工具：" />

                <TextView
                    android:id="@+id/tv_traffic"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/ceshi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3dp"
                android:background="@drawable/cemetery_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/cemetery_text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注：" />

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/cemetery_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bt_userinfo"
                    android:layout_width="@dimen/dimen_140dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center|right"
                    android:background="@drawable/bg_cemetery_item_button_2"
                    android:gravity="center"
                    android:text="洽谈信息"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_state_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            style="@style/cemetery_button_style_1"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/bg_cemetery_item_button_1"
            android:text="拒单" />

        <Button
            style="@style/cemetery_button_style_1"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/bg_cemetery_item_button_2"
            android:text="接单" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_state_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_submit"
            style="@style/cemetery_button_style_1"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/bg_cemetery_item_button_1"
            android:text="定墓" />

        <Button
            android:id="@+id/bt_talkfail"
            style="@style/cemetery_button_style_1"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/bg_cemetery_item_button_2"
            android:text="未购墓" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_detailes"
            style="@style/cemetery_button_style_1"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_80dp"
            android:background="@drawable/bg_cemetery_item_button_1"
            android:text="订单详情" />

    </LinearLayout>
</LinearLayout>