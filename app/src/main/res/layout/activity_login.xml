<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_180dp"
            android:background="@drawable/welcome" />

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_30dp"
            android:background="@drawable/shape_et_login"
            android:drawableLeft="@drawable/ic_login_username"
            android:drawablePadding="@dimen/dimen_20dp"
            android:hint="用户名"
            android:padding="@dimen/dimen_20dp" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_30dp"
            android:background="@drawable/shape_et_login"
            android:drawableLeft="@drawable/ic_login_password"
            android:drawablePadding="@dimen/dimen_20dp"
            android:hint="密码"
            android:padding="@dimen/dimen_20dp"
            android:password="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_login_re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_100dp"
                android:text="记住密码"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_35dp" />

            <CheckBox
                android:id="@+id/cb_login_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登陆"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_35dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_30dp"
            android:background="@drawable/ljdl"
            android:gravity="center"
            android:padding="@dimen/dimen_20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp" />

        <ImageView
            android:id="@+id/btn_login_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wfjr"
            android:layout_gravity="center"
             />
    </LinearLayout>

</ScrollView>