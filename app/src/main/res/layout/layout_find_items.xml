<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_180dp"
        android:src="@color/zhy_text_color_1" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:text="标题"
        android:textSize="@dimen/dimen_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2014-02-05 12:13"
            android:textColor="@color/zhy_text_color_2"
            android:textSize="@dimen/dimen_20dp"></TextView>

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="@dimen/dimen_26dp"
            android:layout_height="@dimen/dimen_26dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:src="@drawable/zhy_find_collection_1" />

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:text="0"
            android:textColor="@color/zhy_text_color_2" />

        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="@dimen/dimen_26dp"
            android:layout_height="@dimen/dimen_26dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:src="@drawable/zhy_find_praise_1" />

        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/zhy_text_color_2" />

    </LinearLayout>
</LinearLayout>