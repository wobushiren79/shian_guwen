<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_visitNum"
        style="@style/order_detail_projectTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_80dp"
        android:text="治丧项目" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:background="@color/zhy_line_3" />

    <TextView
        android:id="@+id/tv_setmealMainName"
        style="@style/order_detail_productTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:text="套餐名称：" />


    <TextView
        android:id="@+id/tv_funeralAddress"
        style="@style/order_detail_productTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:text="治丧地点："
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:background="@color/gray_common"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_orderNum"
            style="@style/order_detail_productTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="骨灰盒：" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_common" />

        <TextView
            android:id="@+id/tv_orderTime"
            style="@style/order_detail_productTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="寿衣：" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:background="@color/gray_common"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_xx_1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:orientation="horizontal">

        <TextView
            style="@style/order_detail_ctgTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_weight="1"
            android:text="合计："
            android:textSize="@dimen/dimen_24dp" />

        <TextView
            android:id="@+id/tv_totalprice"
            style="@style/order_detail_ctgTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:text="￥"
            android:textColor="@color/dimgray"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_16dp"
        android:background="@color/zhy_backgroud_1" />

</LinearLayout>