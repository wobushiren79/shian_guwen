<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wait_service_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blackground"
    tools:context="com.shian.shianlife.activity.updata.WaitServiceDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shian.shianlife.view.writeview.TimeSelectViewNormal
            android:id="@+id/write_timeselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="去世时间"></com.shian.shianlife.view.writeview.TimeSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.shianlife.view.writeview.MapSelectViewNormal
            android:id="@+id/write_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="去世地址"></com.shian.shianlife.view.writeview.MapSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:text="请确认是否当前开始执行派单业务，开始后不可撤销"
            android:textColor="@color/black_item_shua_textcolor"
            android:textSize="@dimen/dimen_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/dimen_267dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:background="@drawable/zhy_button_state_2"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/dimen_267dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:background="@drawable/zhy_button_state_5"
                android:gravity="center"
                android:text="确认开始执行"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
