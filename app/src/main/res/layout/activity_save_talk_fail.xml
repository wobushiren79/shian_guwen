<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_save_talk_fail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1"
    android:orientation="vertical"
    tools:context="com.shian.shianlife.activity.SaveTalkFailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shian.shianlife.view.writeview.EditTextViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            MyViewAttr:isImportant="false"
            MyViewAttr:titleName="往生者姓名"></com.shian.shianlife.view.writeview.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.SpinnerViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="false"
            MyViewAttr:titleName="往生者现状"></com.shian.shianlife.view.writeview.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.MapSelectViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_mapselect_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="false"
            MyViewAttr:titleName="客户当前所在地"></com.shian.shianlife.view.writeview.MapSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.SpinnerViewEdit xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="联系人是往生者的"></com.shian.shianlife.view.writeview.SpinnerViewEdit>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.MapSelectViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_mapselect_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="false"
            MyViewAttr:titleName="计划治丧地址"></com.shian.shianlife.view.writeview.MapSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.SpinnerViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_planproject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="false"
            MyViewAttr:titleName="计划治丧方案"></com.shian.shianlife.view.writeview.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.EditTextViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_talkpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:isLonger="true"
            MyViewAttr:titleName="洽谈要点"></com.shian.shianlife.view.writeview.EditTextViewNormal>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.SpinnerViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_talkresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="洽谈结果"></com.shian.shianlife.view.writeview.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_5" />

        <com.shian.shianlife.view.writeview.TimeSelectViewNormal xmlns:MyViewAttr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/write_timeselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            MyViewAttr:isImportant="true"
            MyViewAttr:titleName="预约洽谈时间"></com.shian.shianlife.view.writeview.TimeSelectViewNormal>


        <TextView
            android:id="@+id/submit"
            style="@style/zhy_button_submit_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/zhy_button_state_5"
            android:gravity="center"
            android:text="结束洽谈" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24dp" />
    </LinearLayout>

</ScrollView>
