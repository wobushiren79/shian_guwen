<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/zhy_backgroud_1"
        android:dividerHeight="@dimen/dimen_10dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>

    <ImageView
        android:id="@+id/iv_collection"
        android:layout_alignParentBottom="true"
        android:src="@drawable/zhy_collection_button"
        android:layout_marginBottom="@dimen/dimen_28dp"
        android:layout_marginLeft="@dimen/dimen_28dp"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp" />
</RelativeLayout>