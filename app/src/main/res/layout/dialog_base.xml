<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_533dp"
    android:layout_height="wrap_content"
    android:background="@drawable/zhy_button_state_item_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_48dp"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:gravity="center"
        android:text="内容提示"
        android:textColor="@color/black_item_shua_textcolor"
        android:textSize="@dimen/dimen_32dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/zhy_text_color_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zhy_button_state_6"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/zhy_text_color_11" />

        <TextView
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/zhy_text_color_2" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zhy_button_state_6"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/zhy_text_color_1" />
    </LinearLayout>
</LinearLayout>