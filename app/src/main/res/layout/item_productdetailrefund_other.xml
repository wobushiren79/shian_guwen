<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:background="@color/zhy_line_4"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货号" />

            <TextView
                android:id="@+id/tv_huohao"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:background="@color/zhy_line_4"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位" />

            <TextView
                android:id="@+id/tv_unit"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:background="@color/zhy_line_4"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价" />

            <TextView
                android:id="@+id/tv_danjia"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:background="@color/zhy_line_4"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/order_detail_productTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:gravity="right"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_weight="1"
                android:text="已服务数量" />

            <TextView
                android:layout_marginRight="@dimen/dimen_32dp"
                android:id="@+id/tv_num"
                style="@style/order_detail_productTextStyle1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:text="" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_productTextStyle1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="退货数量" />

            <ImageView
                android:id="@+id/iv_sub"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/zhy_order_reduce" />


            <EditText
                android:id="@+id/et_num"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#999999"
                android:textSize="@dimen/txtsize_20sp" />


            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/zhy_order_add" />

            <TextView
                android:id="@+id/tv_tkje"
                style="@style/order_detail_productTextStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="￥0" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/zhy_edit_back_1"
            android:gravity="top"
            android:hint="请填写退款理由"
            android:minHeight="@dimen/dimen_150dp"
            android:padding="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_24dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@color/zhy_backgroud_1" />
</LinearLayout>