<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_208dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_200dp"
            android:src="@drawable/zhy_pic_loading" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/zhy_text_color_16"
                android:textSize="@dimen/dimen_28dp" />

            <TextView
                android:id="@+id/goods_show_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:text=""
                android:textColor="@color/zhy_text_color_26"
                android:textSize="@dimen/dimen_20dp" />

            <TextView
                android:id="@+id/tv_adviser_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/goods_show_price"
                android:text="圆满价：￥"
                android:textColor="@color/zhy_text_color_4"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_adviser_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/goods_show_price"
                android:layout_toRightOf="@+id/tv_adviser_price_title"
                android:text=""
                android:textColor="@color/zhy_text_color_4"
                android:textSize="@dimen/dimen_32dp" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="@dimen/dimen_132dp"
                android:layout_height="@dimen/dimen_66dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/zhy_submit_button_style_2_corners"
                android:gravity="center"
                android:text="立即抢购"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_28dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/zhy_line_3" />
</LinearLayout>