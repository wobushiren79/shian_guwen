<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipelayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cemetery_titlecolor"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_24dp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhy_text_color_1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:background="@color/zhy_line_4"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_32dp"
        android:paddingRight="@dimen/dimen_32dp">

        <TextView
            android:id="@+id/tv_titlename"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="司仪"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_24dp" />

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/zhy_order_reduce" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="false"
            android:gravity="center"
            android:lines="1"
            android:text="123124"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_24dp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/zhy_order_add" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text="$1234"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_24dp" />
    </LinearLayout>


</com.daimajia.swipe.SwipeLayout>