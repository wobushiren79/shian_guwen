<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_32dp"
    android:paddingRight="@dimen/dimen_32dp">

    <TextView
        android:id="@+id/tv_important"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/zhy_text_color_10"
        android:textSize="@dimen/dimen_24dp" />

    <TextView
        android:id="@+id/tv_titlename"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:ems="7"
        android:text=""
        android:gravity="center_vertical"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/dimen_28dp" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:textColor="@color/zhy_text_color_9"
        android:textSize="@dimen/dimen_24dp" />
</LinearLayout>