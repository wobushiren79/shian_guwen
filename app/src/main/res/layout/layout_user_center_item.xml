<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/zhy_button_state_ll_white"
    android:layout_height="@dimen/dimen_80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dimen_26dp"
        android:layout_height="@dimen/dimen_26dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_32dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_weight="1"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/dimen_24dp" />

    <ImageView
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:src="@drawable/zhy_user_center_in" />


</LinearLayout>